{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "strict": true,
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "./frontend/assets/",
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": [
    "frontend/ts/**/*"
  ]
}
